#! /usr/bin/bash
CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-schema-load"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

schema_path="$(realpath .)/bin/db/schema.sql"
echo $schema_path

if [ "$1" = "prod" ]; then
    echo "using production"
    URL=$PROD_CONNECTION_URL
else
    echo "using local"
    URL=$CONNECTION_URL

fi

psql $URL cruddur < $schema_path
